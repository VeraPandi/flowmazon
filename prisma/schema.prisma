generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Product {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    description String
    imageUrl    String
    name        String
    price       Int
    createdAt   DateTime @default(now()) //Définie l'heure de la création d'un produit
    updatedAt   DateTime @updatedAt // Met à jour l'heure de création du produit quand nous le modifions

    @@map("products")
}
